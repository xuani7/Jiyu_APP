// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"title": "用户id",
			"description": "当前用户id，默认",
			"foreignKey": "uni-id-user._id",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"target_list": {
			"bsonType": "array",
			"arrayType": "object",
			"title": "目标列表",
			"description": "用户目标的历史列表",
			"properties": {
				"targetText": {
					"bsonType": "string",
					"title": "内容",
					"description": "目标的内容，自己上传"
				},
				"isFinish": {
					"bsonType": "bool",
					"title": "是否完成",
					"defaultValue": false
				}
			}
		}
	}
}
